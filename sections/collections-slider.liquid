{{ 'collection-slider.css' | asset_url | stylesheet_tag }}
<script src="https://code.jquery.com/jquery-1.12.4.min.js"></script>

<div class="section_container" style="margin-top: 50px;">
  <div class="main_wrapper">

    {% if section.settings.title != blank %}
    <div class="section_header center">
      <h2 class="title">{{ section.settings.title }}</h2>
    </div>
    {% endif %}

    {% if section.blocks.size > 0 %}
    <div class="collection-list">
      <div id="mixedSlider">
        <div class="MS-content">
          {%- for block in section.blocks -%}
          {% if block.settings.collection.image %}
          {% render 'slider-image', image: block.settings.collection.image, col: block.settings.collection %}
          {% endif %}
          {%- endfor -%}
        </div>
        <div class="MS-controls">
          <button class="MS-left">
            <div data-u="arrowleft" class="jssora073" style="width:50px;height:50px;top:0px;left:30px;"
              data-autocenter="2" data-scale="0.75" data-scale-left="0.75">
              <svg width="48" height="48" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg" style="transform: rotate(90deg);">
                <circle cx="24" cy="24" r="23.5" transform="rotate(90 24 24)" stroke="white" />
                <path fill-rule="evenodd" clip-rule="evenodd"
                  d="M23.9645 31.0352L23.2574 30.328L20.4289 27.4996L21.136 26.7925L23.4644 29.1208L23.4644 17L24.4644 17L24.4644 29.1211L26.7929 26.7925L27.5 27.4996L24.6716 30.328L23.9645 31.0352Z"
                  fill="white" />
              </svg>
            </div>
          </button>
          <button class="MS-right">
            <div data-u="arrowright" class="jssora073" style="width:50px;height:50px;top:0px;right:30px;"
              data-autocenter="2" data-scale="0.75" data-scale-right="0.75">
              <svg width="48" height="48" viewBox="0 0 48 48" fill="none" xmlns="http://www.w3.org/2000/svg" style="transform: rotate(-90deg);">
                <circle cx="24" cy="24" r="23.5" transform="rotate(90 24 24)" stroke="white" />
                <path fill-rule="evenodd" clip-rule="evenodd"
                  d="M23.9645 31.0352L23.2574 30.328L20.4289 27.4996L21.136 26.7925L23.4644 29.1208L23.4644 17L24.4644 17L24.4644 29.1211L26.7929 26.7925L27.5 27.4996L24.6716 30.328L23.9645 31.0352Z"
                  fill="white" />
              </svg>
            </div>
          </button>
        </div>
      </div>
    </div>
    {% endif %}
  </div>
</div>
<script src="{{ 'multislider.js' | asset_url }}"></script>
<script>
  $('#mixedSlider').multislider({
    duration: 750,
    interval: 3000
  });
</script>
{% schema %}
{
"name": "Collection Slider",
"class": "collection-slider",
"settings": [
{
"type": "text",
"id": "title",
"label": "TItle"
}
],
"blocks": [
{
"type": "collection",
"name": "Collection",
"settings": [
{
"type": "collection",
"id": "collection",
"label": "Collection"
}
]
}
],
"presets": [
{
"name": "Collection Slider",
"blocks": [
{
"type": "collection"
},
{
"type": "collection"
},
{
"type": "collection"
}
]
}
]
}
{% endschema %}